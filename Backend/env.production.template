# ===== PRODUCTION ENVIRONMENT CONFIGURATION =====
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo-16k
OPENAI_MAX_TOKENS=800

# Security Configuration (Generate strong keys using setup_environment.py)
SECRET_KEY=your_secret_key_here_minimum_64_characters
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here_minimum_64_characters
API_KEY_HASH_SALT=your_api_key_salt_here

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
DEBUG_MODE=false
LOG_LEVEL=INFO

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/privacy_browser

# Redis Configuration
REDIS_URL=redis://:password@localhost:6379/0
REDIS_PASSWORD=your_redis_password_here

# Monitoring and Logging
ENABLE_METRICS=true
LOG_TO_FILE=true
LOG_ROTATION_SIZE=100MB
LOG_ROTATION_COUNT=5

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Security Headers
ENABLE_CORS=true
ENABLE_HTTPS_REDIRECT=true
ENABLE_SECURITY_HEADERS=true
